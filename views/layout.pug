doctype html
html
    head
        title
            block title
            |  #{servername}
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css')
        block head
    body
        include layout/header
        if !disableFlash
            .container
                include layout/info
        main(style='margin-top: 20px')
            block content
        script.
            isClient = #{session.isClient || false}
            socket_address = "#{socket}"
        script(crossorigin='anonymous' src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4')
        script(src='https://kit.fontawesome.com/3b460f9c99.js' crossorigin='anonymous')
